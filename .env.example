# ─── Agora RTC (server-only) ──────────────────────────────────────────
AGORA_APP_ID=
AGORA_TOKEN=

# ─── Agora Conversational AI Agent — REST API auth (server-only) ─────
AGORA_CUSTOMER_ID=
AGORA_CUSTOMER_SECRET=

# ─── LLM ─────────────────────────────────────────────────────────────
LLM_API_KEY=
LLM_BASE_URL=https://api.groq.com/openai/v1
# Leave blank to use the internal custom-llm container (recommended for production)
# Set this only if you are running the Python service externally (e.g. ngrok in dev)
CUSTOM_LLM_URL=

# ─── TTS (OpenAI) ────────────────────────────────────────────────────
TTS_API_KEY=

# ─── STT (Deepgram) ──────────────────────────────────────────────────
STT_API_KEY=

# ─── Google OAuth ────────────────────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Change to your VPS domain in production:
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/google/callback

# ─── Timezone offset for calendar bookings (hours ahead of UTC) ───────
LOCAL_UTC_OFFSET_HOURS=2

# ─── Optional ────────────────────────────────────────────────────────
TTS_REGION=eastus
AGENT_SYSTEM_PROMPT=
PORT=5000
# CORS_ORIGIN=https://yourdomain.com
